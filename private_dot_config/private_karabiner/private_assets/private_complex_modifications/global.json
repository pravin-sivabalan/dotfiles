                            "modifiers": ["left_shift", "left_control"],
                            "repeat": false
                        },
                        {
                            "key_code": "delete_or_backspace",
                            "repeat": false
                        }
                    ],
                    "type": "basic"
                },
                {
                    "description": "caps_lock -> f19 (alfred)",
                    "from": {
                        "key_code": "caps_lock",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "set_variable": {
                                "name": "caps_lock pressed",
                                "value": 1
                            }
                        }
                    ],
                    "to_after_key_up": [
                        {
                            "set_variable": {
                                "name": "caps_lock pressed",
                                "value": 0
                            }
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "f19"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "conditions": [
                        {
                            "name": "caps_lock pressed",
                            "type": "variable_if",
                            "value": 1
                        }
