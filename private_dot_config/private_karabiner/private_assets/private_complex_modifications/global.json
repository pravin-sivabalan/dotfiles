                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_arrow",
                            "repeat": true
                        }
                    ],
                    "type": "basic"
                },
                {
                    "conditions": [
                        {
                            "name": "caps_lock pressed",
                            "type": "variable_if",
                            "value": 1
                        }
                    ],
                    "description": "caps_lock + l -> right_arrow",
                    "from": {
                        "key_code": "l",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "right_arrow",
                            "repeat": true
                        }
                    ],
                    "type": "basic"
                },
                {
                    "conditions": [
                        {
                            "name": "caps_lock pressed",
                            "type": "variable_if",
                            "value": 1
                        }
                    ],
                    "description": "caps_lock + d -> delete word",
                    "from": {
                        "key_code": "d",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "delete_or_backspace",
                            "modifiers": ["option"],
                            "repeat": false
                        }
                    ],
                    "type": "basic"
                },
                {
                    "conditions": [
                        {
                            "name": "caps_lock pressed",
                            "type": "variable_if",
                            "value": 1
                        }
                    ],
                    "from": {
                        "key_code": "u",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "page_up"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "conditions": [
                        {
                            "type": "device_if",
                            "identifiers": [
                                {
                                    "is_built_in_keyboard": true
                                }
                            ]
                        }
                    ],
                    "description": "command + backslash -> command + delete_or_backspace (internal keyboard only)",
                    "from": {
                        "key_code": "backslash",
                        "modifiers": {
                            "mandatory": ["command"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "delete_or_backspace",
                            "modifiers": ["command"]
                        }
                    ],
                    "type": "basic"
                },
                {
                    "conditions": [
                        {
                            "type": "device_if",
                            "identifiers": [
                                {
                                    "is_built_in_keyboard": true
                                }
                            ]
                        }
                    ],
                    "description": "option + backslash -> option + delete_or_backspace (internal keyboard only)",
