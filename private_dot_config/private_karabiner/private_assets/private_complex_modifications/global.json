                    "from": {
                        "key_code": "delete_or_backspace"
                    },
                    "to": [
                        {
                            "key_code": "backslash"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "conditions": [
                        {
                            "type": "device_if",
                            "identifiers": [
                                {
                                    "is_built_in_keyboard": true
                                }
                            ]
                        }
                    ],
                    "description": "tilde -> escape (internal keyboard only)",
                    "from": {
                        "key_code": "grave_accent_and_tilde"
                    },
                    "to": [
                        {
                            "key_code": "escape"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "conditions": [
                        {
                            "type": "device_if",
                            "identifiers": [
                                {
                                    "is_built_in_keyboard": true
                                }
                            ]
                        }
                    ],
                    "description": "right_control -> left_option (internal keyboard only)",
                    "from": {
                        "key_code": "right_control"
                    },
                    "to": [
                        {
                            "key_code": "left_option"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "description": "left_command + escape -> command + tilde (cycle windows)",
                    "from": {
                        "key_code": "escape",
                        "modifiers": {
                            "mandatory": [
                                "left_command"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "grave_accent_and_tilde",
                            "modifiers": ["left_command"]
                        }
                    ],
                    "type": "basic"
                },
                {
                    "description": "right_command + escape -> tilde",
                    "from": {
                        "key_code": "escape",
                        "modifiers": {
                            "mandatory": [
                                "right_command"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "grave_accent_and_tilde"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "description": "right_command + 9 -> brightness up",
                    "from": {
                        "key_code": "9",
                        "modifiers": {
                            "mandatory": [
                                "right_command"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "display_brightness_increment"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "description": "right_command + 8 -> brightness down",
                    "from": {
                        "key_code": "8",
                        "modifiers": {
                            "mandatory": [
                                "right_command"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "display_brightness_decrement"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "description": "right_command + equal_sign (+) -> volume_up",
                    "from": {
                        "key_code": "equal_sign",
                        "modifiers": {
                            "mandatory": [
                                "right_command"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "volume_increment",
                            "repeat": true
                        }
                    ],
                    "type": "basic"
                },
                {
                    "description": "right_command + hyphen (-) -> volume_down",
                    "from": {
                        "key_code": "hyphen",
                        "modifiers": {
                            "mandatory": [
                                "right_command"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "volume_decrement",
                            "repeat": true
                        }
                    ],
                    "type": "basic"
                },
                {
                    "description": "right_command + 0 -> mute",
                    "from": {
                        "key_code": "0",
                        "modifiers": {
                            "mandatory": [
                                "right_command"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "mute"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "description": "right_command + [ -> previous track",
                    "from": {
                        "key_code": "open_bracket",
                        "modifiers": {
                            "mandatory": [
                                "right_command"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "rewind"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "description": "right_command + ] -> next track",
                    "from": {
                        "key_code": "close_bracket",
                        "modifiers": {
                            "mandatory": [
                                "right_command"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "fastforward"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "description": "right_command + p -> play/pause",
                    "from": {
                        "key_code": "p",
                        "modifiers": {
                            "mandatory": [
                                "right_command"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "play_or_pause"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "conditions": [
                        {
                            "name": "caps_lock pressed",
                            "type": "variable_if",
                            "value": 1
                        }
                    ],
