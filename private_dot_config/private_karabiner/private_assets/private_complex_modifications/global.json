                        "key_code": "backslash",
                        "modifiers": {
                            "mandatory": ["option"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "delete_or_backspace",
                            "modifiers": ["option"]
                        }
                    ],
                    "type": "basic"
                },
                {
                    "conditions": [
                        {
                            "type": "device_if",
                            "identifiers": [
                                {
                                    "is_built_in_keyboard": true
                                }
                            ]
                        }
                    ],
                    "description": "control + backslash -> control + delete_or_backspace (internal keyboard only)",
